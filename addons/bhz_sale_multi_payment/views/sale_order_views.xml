<odoo>
    <record id="view_order_form_bhz_multi_payment" model="ir.ui.view">
        <field name="name">sale.order.form.bhz.multi.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">            
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Pagamentos">
                    <group>
                        <field name="amount_payment_total" readonly="1"/>
                        <label string="A soma deve ser igual ao Total do Pedido."/>
                    </group>
                    <field name="payment_line_ids">
                        <tree editable="bottom">                            
                            <field name="journal_id"/>
                            <field name="amount"/>
                            <field name="payment_date"/>
                            <field name="note"/>
                        </tree>
                        <form>
                            <group>
                                <field name="journal_id"/>
                                <field name="amount"/>
                                <field name="payment_date"/>
                                <field name="note"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
