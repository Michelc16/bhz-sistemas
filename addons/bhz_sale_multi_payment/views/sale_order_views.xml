<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- 1) Tree da linha de pagamento -->
    <record id="view_sale_order_payment_line_tree" model="ir.ui.view">
        <field name="name">sale.order.payment.line.tree</field>
        <field name="model">sale.order.payment.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="journal_id"/>
                <field name="amount"/>
                <field name="payment_date"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <!-- 2) Form da linha de pagamento -->
    <record id="view_sale_order_payment_line_form" model="ir.ui.view">
        <field name="name">sale.order.payment.line.form</field>
        <field name="model">sale.order.payment.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="journal_id"/>
                    <field name="amount"/>
                    <field name="payment_date"/>
                    <field name="note"/>
                </group>
            </form>
        </field>
    </record>

    <!-- 3) Herdar o formulário da venda e adicionar a aba -->
    <record id="view_order_form_bhz_multi_payment" model="ir.ui.view">
        <field name="name">sale.order.form.bhz.multi.payment</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- coloca dentro do notebook principal -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Pagamentos">
                    <group>
                        <field name="amount_payment_total" readonly="1"/>
                        <label string="A soma deve ser igual ao Total do Pedido."/>
                    </group>
                    <!-- aqui só declaramos o o2m e apontamos as views -->
                    <field name="payment_line_ids"
                           context="{'default_sale_id': active_id}"
                           mode="tree,form">
                        <tree ref="view_sale_order_payment_line_tree"/>
                        <form ref="view_sale_order_payment_line_form"/>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
