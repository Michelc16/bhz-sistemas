<odoo>
    <!-- 1) Desativar conteúdo de promoção de marca no website -->
    <template id="bhz_website_brand_promotion"
              inherit_id="website.brand_promotion"
              name="BHZ Website Brand Promotion (replace)">
        <xpath expr="." position="replace">
            <!-- vazio de propósito: removemos a promoção da Odoo -->
        </xpath>
    </template>

    <!-- 2) Desativar conteúdo de promoção de marca na loja -->
    <template id="bhz_website_sale_brand_promotion"
              inherit_id="website_sale.brand_promotion"
              name="BHZ Website Sale Brand Promotion (replace)">
        <xpath expr="." position="replace">
            <!-- vazio de propósito: removemos a promoção da Odoo na loja -->
        </xpath>
    </template>

    <!-- 3) Substituir o placeholder do header pela sua logo -->
    <template id="bhz_placeholder_header_brand"
              inherit_id="website.placeholder_header_brand"
              name="BHZ Placeholder Header Brand">
        <xpath expr="." position="replace">
            <a t-attf-href="/" class="navbar-brand logo">
                <img src="/bhz_branding_official/static/src/img/bhz_logo.png"
                     alt="BHZ SISTEMAS"
                     style="height: 40px;"/>
            </a>
        </xpath>
    </template>
</odoo>
