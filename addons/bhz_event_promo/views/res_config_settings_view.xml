<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bhz_event_promo_res_config_settings_view" model="ir.ui.view">
        <field name="name">bhz_event_promo.res.config.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!--
            Odoo 19 pode alterar a estrutura do formulário de configurações (Enterprise/Studio)
            e alguns anchors (ex.: website_id ou div.settings) podem não existir.
            Para evitar quebra por XPath não localizado, inserimos dentro do <sheet>.
            -->
            <xpath expr="//sheet" position="inside">
                <div class="app_settings_block" data-string="Carrossel de Destaques">
                    <h2>Carrossel de Destaques</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="form-group">
                                <label class="col-form-label" for="bhz_featured_carousel_autoplay">Autoplay</label>
                                <div class="o_row">
                                    <field name="bhz_featured_carousel_autoplay" widget="switch"/>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label" for="bhz_featured_carousel_interval_ms">Intervalo entre slides (ms)</label>
                                <field name="bhz_featured_carousel_interval_ms" class="o_row"/>
                                <small class="text-muted">Padrão 5000 ms. Respeita limites do snippet.</small>
                            </div>
                            <div class="form-group">
                                <label class="col-form-label" for="bhz_featured_carousel_refresh_ms">Auto-refresh (ms)</label>
                                <field name="bhz_featured_carousel_refresh_ms" class="o_row"/>
                                <small class="text-muted">0 desabilita. Ex.: 60000 para atualizar a cada 1 minuto.</small>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
