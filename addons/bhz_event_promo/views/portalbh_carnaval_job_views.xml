<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_portalbh_carnaval_job_tree" model="ir.ui.view">
        <field name="name">bhz.portalbh.carnaval.import.job.tree</field>
        <field name="model">bhz.portalbh.carnaval.import.job</field>
        <field name="arch" type="xml">
            <list string="Importações PortalBH">
                <field name="name"/>
                <field name="state"/>
                <field name="current_page"/>
                <field name="max_pages"/>
                <field name="created_count"/>
                <field name="updated_count"/>
                <field name="skipped_count"/>
                <field name="error_count"/>
                <field name="last_run"/>
                <field name="create_date"/>
            </list>
        </field>
    </record>

    <record id="view_portalbh_carnaval_job_form" model="ir.ui.view">
        <field name="name">bhz.portalbh.carnaval.import.job.form</field>
        <field name="model">bhz.portalbh.carnaval.import.job</field>
        <field name="arch" type="xml">
            <form string="Importação PortalBH">
                <header>
                    <button name="action_run_now" type="object" string="Rodar lote agora" class="btn-primary"
                            attrs="{'invisible': [('state', 'in', ['done','failed','canceled'])]}"/>
                    <button name="action_enqueue" type="object" string="Reagendar" class="btn-secondary"
                            attrs="{'invisible': [('state', 'in', ['done','failed','canceled'])]}"/>
                    <button name="action_cancel" type="object" string="Cancelar" class="btn-secondary"
                            attrs="{'invisible': [('state', 'in', ['done','failed','canceled'])]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,running,done,failed,canceled"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="source_url"/>
                        <field name="max_pages"/>
                        <field name="current_page"/>
                        <field name="update_existing"/>
                        <field name="default_duration_hours"/>
                    </group>
                    <group string="Totais">
                        <field name="created_count" readonly="1"/>
                        <field name="updated_count" readonly="1"/>
                        <field name="skipped_count" readonly="1"/>
                        <field name="error_count" readonly="1"/>
                        <field name="last_run" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Configurações">
                            <group>
                                <field name="pages_per_cron"/>
                                <field name="request_timeout_connect"/>
                                <field name="request_timeout_read"/>
                                <field name="image_max_bytes"/>
                            </group>
                        </page>
                        <page string="Log">
                            <field name="log" nolabel="1" widget="text"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_portalbh_carnaval_job" model="ir.actions.act_window">
        <field name="name">Importações PortalBH</field>
        <field name="res_model">bhz.portalbh.carnaval.import.job</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Nenhuma importação ainda.
            </p>
            <p>
                Use o menu <b>Importar Carnaval BH (PortalBH)</b> para iniciar um job.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_portalbh_carnaval_job"
        name="Importações PortalBH"
        parent="event.menu_event_configuration"
        action="action_portalbh_carnaval_job"
        sequence="45"
        groups="event.group_event_manager"/>

</odoo>
