<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="bhz_event_promo.GuiabhFeaturedCarouselOption" name="Carrossel de Destaques">
        <BuilderRow label.translate="Tempo entre slides (ms)">
            <div class="o_we_number_input w-100">
                <input type="number"
                       min="1000"
                       max="20000"
                       step="500"
                       t-att-value="this.interval"
                       t-on-input="this.onIntervalInput"
                       t-on-change="this.onIntervalChange"
                       class="form-control"/>
            </div>
        </BuilderRow>

        <BuilderRow label.translate="Auto-refresh (ms)">
            <div class="o_we_number_input w-100">
                <input type="number"
                       min="0"
                       max="600000"
                       step="1000"
                       t-att-value="this.refreshMs"
                       t-on-input="this.onRefreshInput"
                       t-on-change="this.onRefreshChange"
                       class="form-control"/>
            </div>
            <small class="text-muted">0 desabilita. Ex.: 60000 = 1 minuto.</small>
        </BuilderRow>

        <BuilderRow label.translate="Autoplay">
            <div class="o_we_checkbox">
                <input type="checkbox"
                       t-att-checked="this.autoplay"
                       t-on-change="this.onAutoplayToggle"/>
            </div>
        </BuilderRow>
    </t>

</templates>
