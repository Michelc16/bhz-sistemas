<odoo>
    <!-- Form de produto -->
    <record id="view_product_template_bhz_stock_form" model="ir.ui.view">
        <field name="name">product.template.bhz.stock.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <!-- Margem de lucro ao lado do preço de venda -->
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="bhz_margin_percent"/>
            </xpath>

            <!-- Bloco de estoque BHZ na aba de inventário -->
            <xpath expr="//page[@name='inventory']" position="inside">
                <group string="Estoque BHZ">
                    <field name="bhz_qty_physical" readonly="1"/>
                    <field name="bhz_qty_reserved" readonly="1"/>
                    <field name="bhz_qty_available" readonly="1"/>
                </group>
            </xpath>

        </field>
    </record>

    <!-- Tree de produtos no inventário (lista) -->
    <record id="view_product_template_bhz_stock_tree" model="ir.ui.view">
        <field name="name">product.template.bhz.stock.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Depois do preço de venda, mostrar os estoques -->
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="bhz_qty_physical"/>
                <field name="bhz_qty_reserved"/>
                <field name="bhz_qty_available"/>
            </xpath>
        </field>
    </record>

</odoo>
