<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ação principal -->
    <record id="action_lab_checklist" model="ir.actions.act_window">
        <field name="name">Checklists de Laboratório</field>
        <field name="res_model">lab.checklist</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>Aqui você acompanha os checklists de PCs e notebooks vendidos.</p>
        </field>
    </record>

    <!-- Menu principal (dentro de Vendas) -->
    <menuitem id="menu_lab_root"
              name="Laboratório"
              parent="sale.menu_sale_root"
              sequence="50"/>

    <menuitem id="menu_lab_checklist"
              name="Checklists"
              parent="menu_lab_root"
              action="action_lab_checklist"
              sequence="10"/>

    <!-- Tree view -->
    <record id="view_lab_checklist_tree" model="ir.ui.view">
        <field name="name">lab.checklist.tree</field>
        <field name="model">lab.checklist</field>
        <field name="arch" type="xml">
            <tree string="Checklists de Laboratório">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="sale_order_line_id"/>
                <field name="product_id"/>
                <field name="technician_id"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_lab_checklist_form" model="ir.ui.view">
        <field name="name">lab.checklist.form</field>
        <field name="model">lab.checklist</field>
        <field name="arch" type="xml">
            <form string="Checklist de Laboratório">
                <header>
                    <button name="action_start"
                            string="Em andamento"
                            type="object"
                            states="draft"
                            class="btn-primary"/>
                    <button name="action_done"
                            string="Concluído"
                            type="object"
                            states="draft,in_progress"
                            class="btn-secondary"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,in_progress,done"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sale_order_id"/>
                            <field name="sale_order_line_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="template_id" readonly="1"/>
                            <field name="technician_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Itens de Checklist">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="done"/>
                                    <field name="notes"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Observações">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
