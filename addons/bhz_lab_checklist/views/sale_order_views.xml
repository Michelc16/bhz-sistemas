<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_lab_checklist" model="ir.ui.view">
        <field name="name">sale.order.lab.checklist.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Smart button na parte de cima do pedido -->
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_view_lab_checklists"
                        type="action"
                        string="Checklists"
                        class="oe_stat_button"
                        attrs="{'invisible': [('lab_checklist_count', '=', 0)]}">
                    <field name="lab_checklist_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
