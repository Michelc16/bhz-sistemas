<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Reset contador por minuto -->
  <record id="ir_cron_bhz_wa_minute" model="ir.cron">
    <field name="name">BHZ WA – Reset minuto</field>
    <field name="model_id" ref="model_bhz_wa_account"/>
    <field name="state">code</field>
    <field name="code">model.cron_reset_minute()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">minutes</field>
    <field name="active">True</field>
  </record>

  <!-- Reset contador por hora -->
  <record id="ir_cron_bhz_wa_hour" model="ir.cron">
    <field name="name">BHZ WA – Reset hora</field>
    <field name="model_id" ref="model_bhz_wa_account"/>
    <field name="state">code</field>
    <field name="code">model.cron_reset_hour()</field>
    <field name="interval_number">1</field>
    <field name="interval_type">hours</field>
    <field name="active">True</field>
  </record>

  <record id="ir_cron_bhz_wa_sync_defaults" model="ir.cron">
    <field name="name">BHZ WhatsApp Omni – Sync Starter Defaults</field>
    <field name="model_id" ref="base.model_ir_cron"/>
    <field name="state">code</field>
    <field name="code">env['bhz.wa.config.sync'].action_sync_starter_defaults()</field>
    <field name="active">True</field>
    <field name="interval_number">12</field>
    <field name="interval_type">hours</field>
    <field name="numbercall">-1</field>
    <field name="doall">False</field>
  </record>
</odoo>
