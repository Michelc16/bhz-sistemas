<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_bhz_wa_conversation_tree" model="ir.ui.view">
    <field name="name">bhz.wa.conversation.tree</field>
    <field name="model">bhz.wa.conversation</field>
    <field name="arch" type="xml">
      <tree>
        <field name="partner_id"/>
        <field name="last_message"/>
        <field name="last_message_date"/>
        <field name="unread_count"/>
      </tree>
    </field>
  </record>

  <record id="view_bhz_wa_conversation_kanban" model="ir.ui.view">
    <field name="name">bhz.wa.conversation.kanban</field>
    <field name="model">bhz.wa.conversation</field>
    <field name="arch" type="xml">
      <kanban class="o_kanban_small_column">
        <field name="name"/>
        <field name="last_message"/>
        <field name="last_message_date"/>
        <field name="unread_count"/>
        <templates>
          <t t-name="kanban-box">
            <div class="oe_kanban_global_click o_kanban_record">
              <div class="o_kanban_primary_left">
                <strong><t t-esc="record.name.value"/></strong>
                <div class="text-muted">
                  <t t-esc="record.last_message.value or ''"/>
                </div>
              </div>
              <div class="o_kanban_primary_right">
                <t t-if="record.unread_count.value">
                  <span class="badge badge-primary">
                    <t t-esc="record.unread_count.value"/>
                  </span>
                </t>
              </div>
            </div>
          </t>
        </templates>
      </kanban>
    </field>
  </record>

  <record id="view_bhz_wa_conversation_form" model="ir.ui.view">
    <field name="name">bhz.wa.conversation.form</field>
    <field name="model">bhz.wa.conversation</field>
    <field name="arch" type="xml">
      <form string="Conversa WhatsApp">
        <header>
          <button name="action_mark_read" type="object" string="Marcar como lida" class="btn-secondary"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="partner_id" readonly="1"/>
              <field name="account_id" readonly="1"/>
              <field name="session_id" readonly="1"/>
            </group>
            <group>
              <field name="unread_count" readonly="1"/>
              <field name="last_message_date" readonly="1"/>
            </group>
          </group>
          <notebook>
            <page string="Mensagens">
              <field name="message_ids" nolabel="1" mode="tree" context="{'default_conversation_id': active_id}">
                <tree editable="bottom" create="false" delete="false">
                  <field name="create_date"/>
                  <field name="direction"/>
                  <field name="state"/>
                  <field name="body"/>
                </tree>
              </field>
            </page>
            <page string="Enviar">
              <group>
                <field name="composer_text"/>
                <button name="action_send_text" type="object" string="Enviar" class="oe_highlight"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_bhz_wa_inbox" model="ir.actions.act_window">
    <field name="name">Conversas WhatsApp</field>
    <field name="res_model">bhz.wa.conversation</field>
    <field name="view_mode">kanban,tree,form</field>
  </record>
</odoo>
