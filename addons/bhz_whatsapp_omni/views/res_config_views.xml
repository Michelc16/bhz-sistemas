<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="res_config_bhz_wa" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.bhz.wa</field>
    <field name="model">res.config.settings</field>
    <!-- ID correto da view de Settings no Odoo 19 -->
    <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <!-- Insere dentro do bloco de integrações (Odoo 19 usa data-key) -->
      <xpath expr="//div[@data-key='integration']" position="inside">
        <div class="col-12 col-lg-6 o_setting_box" id="bhz_wa_settings">
          <div class="o_setting_left_pane">
            <field name="bhz_wa_public_base"/>
          </div>
          <div class="o_setting_right_pane">
            <label for="bhz_wa_public_base" string="URL pública BHZ WhatsApp"/>
            <div class="text-muted">
              Exemplo: <code>https://seu-dominio.odoo.com</code>. 
              Será usada para montar o webhook:
              <code>/bhz_wa/business/webhook</code>.
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
