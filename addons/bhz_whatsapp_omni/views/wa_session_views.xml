<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_bhz_wa_session_form" model="ir.ui.view">
    <field name="name">bhz.wa.session.form</field>
    <field name="model">bhz.wa.session</field>
    <field name="arch" type="xml">
      <form string="Sessão Starter">
        <header>
          <button name="action_get_qr" type="object" string="Gerar/Atualizar QR" class="oe_highlight"/>
          <button name="action_refresh_status" type="object" string="Checar Status"/>
          <button name="action_logout" type="object" string="Logout"/>
          <field name="status" widget="statusbar" statusbar_visible="new,qr,connected,disconnected,error"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="session_id" readonly="1"/>
              <field name="external_base_url" readonly="1"/>
              <field name="account_id"/>
            </group>
            <group>
              <field name="paired_number" readonly="1"/>
              <field name="last_qr_at" readonly="1"/>
              <field name="status" readonly="1"/>
            </group>
          </group>
          <group string="QR Code">
            <field name="qr_image" widget="image" class="oe_avatar"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_bhz_wa_session_list" model="ir.ui.view">
    <field name="name">bhz.wa.session.list</field>
    <field name="model">bhz.wa.session</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="session_id"/>
        <field name="status"/>
      </list>
    </field>
  </record>

  <record id="action_bhz_wa_session" model="ir.actions.act_window">
    <field name="name">Sessões (Starter)</field>
    <field name="res_model">bhz.wa.session</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
