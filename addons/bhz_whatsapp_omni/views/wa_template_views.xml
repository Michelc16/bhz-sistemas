<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_bhz_wa_template_form" model="ir.ui.view">
    <field name="name">bhz.wa.template.form</field>
    <field name="model">bhz.wa.template</field>
    <field name="arch" type="xml">
      <form string="Template Business">
        <sheet>
          <group>
            <field name="name"/>
            <field name="language"/>
            <field name="category"/>
            <field name="status"/>
            <field name="account_id"/>
          </group>
          <group>
            <field name="body_example"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_bhz_wa_template_tree" model="ir.ui.view">
    <field name="name">bhz.wa.template.tree</field>
    <field name="model">bhz.wa.template</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="language"/>
        <field name="category"/>
        <field name="status"/>
      </tree>
    </field>
  </record>

  <record id="action_bhz_wa_template" model="ir.actions.act_window">
    <field name="name">Templates (Business)</field>
    <field name="res_model">bhz.wa.template</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
