<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_bhz_wa_message_list" model="ir.ui.view">
    <field name="name">bhz.wa.message.list</field>
    <field name="model">bhz.wa.message</field>
    <field name="arch" type="xml">
      <list>
        <field name="create_date"/>
        <field name="provider"/>
        <field name="direction"/>
        <field name="state"/>
        <field name="partner_id"/>
        <field name="wa_from"/>
        <field name="wa_to"/>
        <field name="body"/>
      </list>
    </field>
  </record>

  <record id="view_bhz_wa_message_form" model="ir.ui.view">
    <field name="name">bhz.wa.message.form</field>
    <field name="model">bhz.wa.message</field>
    <field name="arch" type="xml">
      <form string="Mensagem WhatsApp">
        <sheet>
          <group>
            <group>
              <field name="account_id"/>
              <field name="session_id"/>
              <field name="partner_id"/>
            </group>
            <group>
              <field name="provider"/>
              <field name="direction"/>
              <field name="state"/>
              <field name="message_timestamp"/>
            </group>
          </group>
          <group>
            <field name="wa_from"/>
            <field name="wa_to"/>
            <field name="is_group"/>
          </group>
          <group>
            <field name="body" nolabel="1"/>
          </group>
          <group>
            <field name="payload_json" widget="text" placeholder="Payload bruto"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_bhz_wa_message" model="ir.actions.act_window">
    <field name="name">Log de Mensagens</field>
    <field name="res_model">bhz.wa.message</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_rebuild_wa_conversations" model="ir.actions.server">
    <field name="name">Reprocessar conversas WhatsApp</field>
    <field name="model_id" ref="model_bhz_wa_message"/>
    <field name="binding_model_id" ref="model_bhz_wa_message"/>
    <field name="binding_type">action</field>
    <field name="state">code</field>
    <field name="code">action = env['bhz.wa.message'].action_rebuild_conversations()</field>
    <field name="groups_id" eval="[(4, ref('base.group_system'))]"/>
  </record>
</odoo>
