<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_bhz_wa_account_form" model="ir.ui.view">
    <field name="name">bhz.wa.account.form</field>
    <field name="model">bhz.wa.account</field>
    <field name="arch" type="xml">
      <form string="Conta WhatsApp">
        <header>
          <button name="button_starter_connect"
                  type="object"
                  string="Conectar via QR"
                  class="oe_highlight"
                  attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
          <button name="button_starter_refresh_status"
                  type="object"
                  string="Atualizar Status"
                  attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
          <button name="button_starter_disconnect"
                  type="object"
                  string="Desconectar"
                  attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
          <button name="action_business_test_message"
                  type="object"
                  string="Enviar teste (Business)"
                  attrs="{'invisible': [('mode', '!=', 'business')]}"/>
        </header>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="mode"/>
              <field name="quiet_hours" placeholder="22:00-07:59"/>
              <field name="starter_status" attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
              <field name="starter_session_id" readonly="1" attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
            </group>
            <group>
              <field name="max_msgs_per_minute"/>
              <field name="max_msgs_per_hour"/>
              <field name="max_msgs_per_contact_per_hour"/>
              <field name="starter_last_qr_request" readonly="1" attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
              <field name="starter_last_number" readonly="1" attrs="{'invisible': [('mode', '!=', 'starter')]}"/>
            </group>
          </group>
          <notebook>
            <page string="Starter (QR)">
              <group>
                <div class="o_form_label" colspan="2">
                  Configuração feita pela BHZ Sistemas. Use o botão "Conectar via QR" acima para gerar o código.
                </div>
                <field name="starter_base_url" readonly="1"/>
                <field name="webhook_secret" readonly="1"/>
              </group>
            </page>

            <page string="Business (Cloud API)">
              <group>
                <field name="business_phone_number_id"/>
                <field name="business_token" password="True"/>
                <field name="business_verify_token"/>

                <separator string="URL do Webhook" colspan="2"/>

                <div>
                  <p>
                    Use a URL pública do seu Odoo (configurada em
                    <em>Configurações &gt; BHZ WhatsApp</em>) seguida de:
                    <code>/bhz_wa/business/webhook</code>
                  </p>
                </div>
              </group>
            </page>

            <page string="IA Atendente">
              <group>
                <field name="ai_enabled"/>
                <field name="ai_endpoint"/>
                <field name="ai_token" password="True"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="view_bhz_wa_account_list" model="ir.ui.view">
    <field name="name">bhz.wa.account.list</field>
    <field name="model">bhz.wa.account</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="mode"/>
      </list>
    </field>
  </record>

  <record id="action_bhz_wa_account" model="ir.actions.act_window">
    <field name="name">Contas WhatsApp</field>
    <field name="res_model">bhz.wa.account</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
