<odoo>
    <record id="view_meli_product_form" model="ir.ui.view">
        <field name="name">meli.product.form</field>
        <field name="model">meli.product</field>
        <field name="arch" type="xml">
            <form string="Produto Mercado Livre">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="account_id"/>
                        <field name="product_id"/>
                        <field name="meli_item_id"/>
                        <field name="sale_price"/>
                        <field name="meli_permalink" readonly="1"/>
                    </group>
                    <footer>
                        <button name="action_fetch_item" string="Atualizar do ML" type="object" class="btn-primary"/>
                        <button string="Fechar" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_meli_product_list" model="ir.ui.view">
        <field name="name">meli.product.list</field>
        <field name="model">meli.product</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button name="action_manual_sync_products"
                            type="object"
                            string="Sincronizar produtos"
                            class="btn btn-primary"/>
                </header>
                <field name="name"/>
                <field name="account_id"/>
                <field name="product_id"/>
                <field name="meli_item_id"/>
                <field name="sale_price"/>
            </list>
        </field>
    </record>

    <record id="action_meli_product" model="ir.actions.act_window">
        <field name="name">Produtos ML</field>
        <field name="res_model">meli.product</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
