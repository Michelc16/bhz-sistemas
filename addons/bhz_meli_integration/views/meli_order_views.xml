<odoo>
    <record id="view_meli_order_list" model="ir.ui.view">
        <field name="name">meli.order.list</field>
        <field name="model">meli.order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="account_id"/>
                <field name="buyer_name"/>
                <field name="date_created"/>
                <field name="total_amount"/>
                <field name="status"/>
                <field name="sale_order_id"/>
            </list>
        </field>
    </record>

    <record id="view_meli_order_form" model="ir.ui.view">
        <field name="name">meli.order.form</field>
        <field name="model">meli.order</field>
        <field name="arch" type="xml">
            <form string="Pedido Mercado Livre">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="account_id" readonly="1"/>
                        <field name="buyer_name"/>
                        <field name="buyer_email"/>
                        <field name="date_created"/>
                        <field name="total_amount"/>
                        <field name="status"/>
                        <field name="sale_order_id"/>
                    </group>
                    <group string="Dados brutos">
                        <field name="raw_data" widget="json"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_meli_order" model="ir.actions.act_window">
        <field name="name">Pedidos ML</field>
        <field name="res_model">meli.order</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
