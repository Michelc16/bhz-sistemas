<odoo>
    <record id="view_meli_account_form" model="ir.ui.view">
        <field name="name">meli.account.form</field>
        <field name="model">meli.account</field>
        <field name="arch" type="xml">
            <form string="Conta Mercado Livre">
                <header>
                    <button name="action_open_authorize"
                            string="Conectar Mercado Livre"
                            type="object"
                            class="btn-primary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,connected,authorized"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>
                    <group string="Dados Mercado Livre">
                        <field name="ml_user_id" readonly="1"/>
                        <field name="site_id" readonly="1"/>
                        <field name="token_expires_at" readonly="1"/>
                    </group>
                    <group string="Sincronização">
                        <field name="last_sync_orders_at" readonly="1"/>
                        <field name="last_sync_products_at" readonly="1"/>
                        <field name="last_error_at" readonly="1"/>
                        <field name="last_error" readonly="1" widget="text"/>
                    </group>
                    <group string="Tokens (admin)" groups="base.group_system">
                        <field name="access_token" readonly="1"/>
                        <field name="refresh_token" readonly="1"/>
                        <field name="authorization_code" readonly="1"/>
                        <field name="auth_state_token" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_meli_account_list" model="ir.ui.view">
        <field name="name">meli.account.list</field>
        <field name="model">meli.account</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="ml_user_id"/>
                <field name="site_id"/>
                <field name="state"/>
                <field name="last_sync_orders_at"/>
                <field name="last_sync_products_at"/>
                <field name="last_error_at"/>
            </list>
        </field>
    </record>

    <record id="action_meli_account" model="ir.actions.act_window">
        <field name="name">Contas Mercado Livre</field>
        <field name="res_model">meli.account</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
