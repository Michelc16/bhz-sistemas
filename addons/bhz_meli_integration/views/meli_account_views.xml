<odoo>
    <record id="view_meli_account_form" model="ir.ui.view">
        <field name="name">meli.account.form</field>
        <field name="model">meli.account</field>
        <field name="arch" type="xml">
            <form string="Conta Mercado Livre">
                <header>
                    <button name="action_open_authorize"
                            string="Conectar Mercado Livre"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <group string="Dados Mercado Livre">
                        <field name="ml_user_id" readonly="1"/>
                        <field name="site_id" readonly="1"/>
                        <field name="access_token" readonly="1"/>
                        <field name="refresh_token" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_meli_account_list" model="ir.ui.view">
        <field name="name">meli.account.list</field>
        <field name="model">meli.account</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="ml_user_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_meli_account" model="ir.actions.act_window">
        <field name="name">Contas Mercado Livre</field>
        <field name="res_model">meli.account</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
