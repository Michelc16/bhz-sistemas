<odoo>  
    <!-- Cada empresa só vê suas próprias contas Mercado Livre -->
    <record id="meli_account_rule_company" model="ir.rule">
        <field name="name">Restrição multiempresa (Contas Mercado Livre)</field>
        <field name="model_id" ref="model_meli_account"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Cada empresa só vê seus próprios pedidos Mercado Livre -->
    <record id="meli_order_rule_company" model="ir.rule">
        <field name="name">Restrição multiempresa (Pedidos Mercado Livre)</field>
        <field name="model_id" ref="model_meli_order"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Cada empresa só vê seus próprios produtos Mercado Livre -->
    <record id="meli_product_rule_company" model="ir.rule">
        <field name="name">Restrição multiempresa (Produtos Mercado Livre)</field>
        <field name="model_id" ref="model_meli_product"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

</odoo>
