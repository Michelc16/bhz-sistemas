<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="action_guiabh_place" model="ir.actions.act_window">
        <field name="name">Lugares</field>
        <field name="res_model">guiabh.place</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="menu_guiabh_places" name="Lugares" parent="menu_guiabh_root" action="action_guiabh_place" sequence="15"/>

    <record id="view_guiabh_place_tree" model="ir.ui.view">
        <field name="name">guiabh.place.tree</field>
        <field name="model">guiabh.place</field>
        <field name="arch" type="xml">
            <list string="Lugares">
                <field name="name"/>
                <field name="place_type_id"/>
                <field name="region_id"/>
                <field name="price_range"/>
                <field name="is_featured"/>
                <field name="website_published"/>
                <field name="website_id"/>
            </list>
        </field>
    </record>

    <record id="view_guiabh_place_kanban" model="ir.ui.view">
        <field name="name">guiabh.place.kanban</field>
        <field name="model">guiabh.place</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="place_type_id">
                <field name="cover_image"/>
                <field name="name"/>
                <field name="place_type_id"/>
                <field name="region_id"/>
                <field name="website_published"/>
                <field name="is_featured"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_image">
                                <img t-if="record.cover_image and record.cover_image.raw_value" t-att-src="'data:image/png;base64,%s' % record.cover_image.raw_value" class="img img-fluid" alt="Lugar"/>
                                <div t-else="" class="o_kanban_image_placeholder">Lugar</div>
                                <div class="badge badge-primary" t-if="record.is_featured.raw_value">Destaque</div>
                                <div class="badge badge-success" t-if="record.website_published.raw_value">Publicado</div>
                            </div>
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div class="text-muted"><field name="place_type_id"/></div>
                                <div>
                                    <span class="badge" t-if="record.region_id.raw_value"><field name="region_id"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_guiabh_place_form" model="ir.ui.view">
        <field name="name">guiabh.place.form</field>
        <field name="model">guiabh.place</field>
        <field name="arch" type="xml">
            <form string="Lugar">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_publish" icon="fa-globe">
                            <field name="website_published" widget="boolean_button" options="{'terminology': 'website'}"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_unpublish" icon="fa-eye-slash" string="Despublicar"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="slug"/>
                            <field name="active"/>
                            <field name="is_featured"/>
                            <field name="website_id"/>
                        </group>
                        <group>
                            <field name="place_type_id"/>
                            <field name="region_id"/>
                            <field name="price_range"/>
                            <field name="tags_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="address_text"/>
                            <field name="phone"/>
                            <field name="instagram"/>
                            <field name="website_link"/>
                            <field name="opening_hours"/>
                        </group>
                        <group>
                            <field name="short_description"/>
                            <field name="cover_image" widget="image" class="oe_avatar" options="{'preview_image': 'cover_image'}"/>
                            <field name="gallery_image_ids" widget="many2many_binary" options="{'no_create_edit': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descrição">
                            <field name="description_html" widget="html" class="oe_inline"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
  </data>
</odoo>
