<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- Regiões -->
    <record id="region_savassi" model="guiabh.region">
        <field name="name">Savassi</field>
    </record>
    <record id="region_pampulha" model="guiabh.region">
        <field name="name">Pampulha</field>
    </record>
    <record id="region_centro" model="guiabh.region">
        <field name="name">Centro</field>
    </record>
    <record id="region_lourdes" model="guiabh.region">
        <field name="name">Lourdes</field>
    </record>
    <record id="region_buritis" model="guiabh.region">
        <field name="name">Buritis</field>
    </record>
    <record id="region_santo_agostinho" model="guiabh.region">
        <field name="name">Santo Agostinho</field>
    </record>

    <!-- Categorias de eventos -->
    <record id="event_cat_shows" model="guiabh.event.category">
        <field name="name">Shows</field>
    </record>
    <record id="event_cat_teatro" model="guiabh.event.category">
        <field name="name">Teatro</field>
    </record>
    <record id="event_cat_infantil" model="guiabh.event.category">
        <field name="name">Infantil</field>
    </record>
    <record id="event_cat_expos" model="guiabh.event.category">
        <field name="name">Exposições</field>
    </record>
    <record id="event_cat_festas" model="guiabh.event.category">
        <field name="name">Festas</field>
    </record>
    <record id="event_cat_gastronomia" model="guiabh.event.category">
        <field name="name">Gastronomia</field>
    </record>
    <record id="event_cat_esporte" model="guiabh.event.category">
        <field name="name">Esporte</field>
    </record>
    <record id="event_cat_cultura" model="guiabh.event.category">
        <field name="name">Cultura gratuita</field>
    </record>

    <!-- Tipos de lugar -->
    <record id="place_type_bares" model="guiabh.place.type">
        <field name="name">Bares</field>
    </record>
    <record id="place_type_restaurantes" model="guiabh.place.type">
        <field name="name">Restaurantes</field>
    </record>
    <record id="place_type_cafes" model="guiabh.place.type">
        <field name="name">Cafés</field>
    </record>
    <record id="place_type_baladas" model="guiabh.place.type">
        <field name="name">Baladas</field>
    </record>
    <record id="place_type_parques" model="guiabh.place.type">
        <field name="name">Parques</field>
    </record>
    <record id="place_type_museus" model="guiabh.place.type">
        <field name="name">Museus</field>
    </record>

    <!-- Tags -->
    <record id="tag_pet" model="guiabh.tag"><field name="name">Pet friendly</field></record>
    <record id="tag_ao_ar_livre" model="guiabh.tag"><field name="name">Ao ar livre</field></record>
    <record id="tag_musica" model="guiabh.tag"><field name="name">Música ao vivo</field></record>
    <record id="tag_familia" model="guiabh.tag"><field name="name">Para família</field></record>
    <record id="tag_casais" model="guiabh.tag"><field name="name">Para casais</field></record>
    <record id="tag_gastronomia" model="guiabh.tag"><field name="name">Gastronomia</field></record>
    <record id="tag_cultura" model="guiabh.tag"><field name="name">Cultura</field></record>
    <record id="tag_gratuito" model="guiabh.tag"><field name="name">Gratuito</field></record>
    <record id="tag_esportes" model="guiabh.tag"><field name="name">Esportes</field></record>
    <record id="tag_noite" model="guiabh.tag"><field name="name">Noite</field></record>

    <!-- Lugares demo -->
    <record id="place_mirante" model="guiabh.place">
        <field name="name">Mirante 360</field>
        <field name="short_description">Bar com vista de tirar o fôlego na região da Serra.</field>
        <field name="place_type_id" ref="place_type_bares"/>
        <field name="region_id" ref="region_savassi"/>
        <field name="price_range">$$</field>
        <field name="is_featured" eval="True"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/place_placeholder.svg"/>
        <field name="address_text">Rua do Horizonte, 250 - Serra</field>
        <field name="instagram">@mirante360</field>
    </record>

    <record id="place_jardim_gastronomico" model="guiabh.place">
        <field name="name">Jardim Gastronômico</field>
        <field name="short_description">Restaurante autoral com jardim iluminado.</field>
        <field name="place_type_id" ref="place_type_restaurantes"/>
        <field name="region_id" ref="region_lourdes"/>
        <field name="price_range">$$$</field>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/place_placeholder.svg"/>
        <field name="address_text">Alameda Sabores, 45 - Lourdes</field>
        <field name="instagram">@jardimgastro</field>
    </record>

    <record id="place_cafe_novo" model="guiabh.place">
        <field name="name">Café Novo Horizonte</field>
        <field name="short_description">Café de bairro com grãos especiais e wi-fi rápido.</field>
        <field name="place_type_id" ref="place_type_cafes"/>
        <field name="region_id" ref="region_centro"/>
        <field name="price_range">$</field>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/place_placeholder.svg"/>
        <field name="address_text">Av. Afonso Pena, 900 - Centro</field>
    </record>

    <record id="place_baladatech" model="guiabh.place">
        <field name="name">Balada Tech</field>
        <field name="short_description">Casa noturna com line-up eletrônico toda semana.</field>
        <field name="place_type_id" ref="place_type_baladas"/>
        <field name="region_id" ref="region_savassi"/>
        <field name="price_range">$$</field>
        <field name="is_featured" eval="True"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/place_placeholder.svg"/>
        <field name="address_text">Rua do Ritmo, 101 - Savassi</field>
    </record>

    <record id="place_parque_da_lua" model="guiabh.place">
        <field name="name">Parque da Lua</field>
        <field name="short_description">Parque urbano com pista de caminhada e piqueniques.</field>
        <field name="place_type_id" ref="place_type_parques"/>
        <field name="region_id" ref="region_pampulha"/>
        <field name="price_range">$</field>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/place_placeholder.svg"/>
        <field name="address_text">Lagoa da Pampulha</field>
    </record>

    <record id="place_museu_memorias" model="guiabh.place">
        <field name="name">Museu Memórias de BH</field>
        <field name="short_description">Exposições sobre a história da capital mineira.</field>
        <field name="place_type_id" ref="place_type_museus"/>
        <field name="region_id" ref="region_centro"/>
        <field name="price_range">$</field>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/place_placeholder.svg"/>
        <field name="address_text">Praça da Cultura, 12 - Centro</field>
    </record>

    <!-- Eventos demo -->
    <record id="event_show_parque" model="guiabh.event">
        <field name="name">Sunset no Parque</field>
        <field name="short_description">Line-up com DJs locais e food trucks.</field>
        <field name="start_datetime">2025-02-15 17:00:00</field>
        <field name="end_datetime">2025-02-15 22:00:00</field>
        <field name="venue_name">Parque da Lua</field>
        <field name="address_text">Lagoa da Pampulha</field>
        <field name="region_id" ref="region_pampulha"/>
        <field name="category_id" ref="event_cat_festas"/>
        <field name="tags_ids" eval="[(6, 0, [ref('tag_musica'), ref('tag_ao_ar_livre')])]"/>
        <field name="price_type">paid</field>
        <field name="min_price" eval="40"/>
        <field name="is_featured" eval="True"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/event_placeholder.svg"/>
        <field name="ticket_url">https://ingressos.guiabh.com/sunset</field>
    </record>

    <record id="event_teatro" model="guiabh.event">
        <field name="name">Peça Noite em BH</field>
        <field name="short_description">Comédia inteligente com elenco local.</field>
        <field name="start_datetime">2025-03-05 20:00:00</field>
        <field name="end_datetime">2025-03-05 22:00:00</field>
        <field name="venue_name">Teatro Municipal</field>
        <field name="address_text">Praça da Liberdade</field>
        <field name="region_id" ref="region_centro"/>
        <field name="category_id" ref="event_cat_teatro"/>
        <field name="tags_ids" eval="[(6, 0, [ref('tag_cultura')])]"/>
        <field name="price_type">paid</field>
        <field name="min_price" eval="60"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/event_placeholder.svg"/>
    </record>

    <record id="event_infantil" model="guiabh.event">
        <field name="name">Manhã no Museu</field>
        <field name="short_description">Atividades infantis e oficinas criativas.</field>
        <field name="start_datetime">2025-02-22 10:00:00</field>
        <field name="end_datetime">2025-02-22 13:00:00</field>
        <field name="venue_name">Museu Memórias de BH</field>
        <field name="address_text">Praça da Cultura, 12 - Centro</field>
        <field name="region_id" ref="region_centro"/>
        <field name="category_id" ref="event_cat_infantil"/>
        <field name="tags_ids" eval="[(6, 0, [ref('tag_familia'), ref('tag_cultura')])]"/>
        <field name="price_type">free</field>
        <field name="is_featured" eval="True"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/event_placeholder.svg"/>
    </record>

    <record id="event_gastronomia" model="guiabh.event">
        <field name="name">Festival de Sabores Mineiros</field>
        <field name="short_description">Chefs locais com menus especiais e música ao vivo.</field>
        <field name="start_datetime">2025-03-20 18:00:00</field>
        <field name="end_datetime">2025-03-20 23:00:00</field>
        <field name="venue_name">Jardim Gastronômico</field>
        <field name="address_text">Alameda Sabores, 45 - Lourdes</field>
        <field name="region_id" ref="region_lourdes"/>
        <field name="category_id" ref="event_cat_gastronomia"/>
        <field name="tags_ids" eval="[(6, 0, [ref('tag_gastronomia'), ref('tag_musica')])]"/>
        <field name="price_type">paid</field>
        <field name="min_price" eval="120"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/event_placeholder.svg"/>
    </record>

    <record id="event_corrida" model="guiabh.event">
        <field name="name">Corrida da Lagoa</field>
        <field name="short_description">Percurso de 7km com largada ao nascer do sol.</field>
        <field name="start_datetime">2025-02-28 06:00:00</field>
        <field name="end_datetime">2025-02-28 09:00:00</field>
        <field name="venue_name">Orla da Pampulha</field>
        <field name="address_text">Pampulha</field>
        <field name="region_id" ref="region_pampulha"/>
        <field name="category_id" ref="event_cat_esporte"/>
        <field name="tags_ids" eval="[(6, 0, [ref('tag_esportes'), ref('tag_ao_ar_livre')])]"/>
        <field name="price_type">paid</field>
        <field name="min_price" eval="70"/>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/event_placeholder.svg"/>
    </record>

    <record id="event_cultura" model="guiabh.event">
        <field name="name">Roda Cultural na Praça</field>
        <field name="short_description">Performances gratuitas e feira criativa.</field>
        <field name="start_datetime">2025-02-18 16:00:00</field>
        <field name="end_datetime">2025-02-18 20:00:00</field>
        <field name="venue_name">Praça Sete</field>
        <field name="address_text">Centro</field>
        <field name="region_id" ref="region_centro"/>
        <field name="category_id" ref="event_cat_cultura"/>
        <field name="tags_ids" eval="[(6, 0, [ref('tag_cultura'), ref('tag_gratuito')])]"/>
        <field name="price_type">free</field>
        <field name="website_published" eval="True"/>
        <field name="cover_image" type="base64" file="bhz_guiabh_website/static/src/img/placeholders/event_placeholder.svg"/>
    </record>
  </data>
</odoo>
