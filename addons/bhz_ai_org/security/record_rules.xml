<odoo>
  <record id="rule_bhz_ai_company_task" model="ir.rule">
    <field name="name">BHZ AI Task: company</field>
    <field name="model_id" ref="model_bhz_ai_task"/>
    <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    <field name="groups" eval="[(4, ref('bhz_ai_org.group_bhz_ai_operator')),(4, ref('bhz_ai_org.group_bhz_ai_viewer'))]"/>
  </record>

  <record id="rule_bhz_ai_company_agent" model="ir.rule">
    <field name="name">BHZ AI Agent: company</field>
    <field name="model_id" ref="model_bhz_ai_agent"/>
    <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    <field name="groups" eval="[(4, ref('bhz_ai_org.group_bhz_ai_operator')),(4, ref('bhz_ai_org.group_bhz_ai_viewer'))]"/>
  </record>
</odoo>
