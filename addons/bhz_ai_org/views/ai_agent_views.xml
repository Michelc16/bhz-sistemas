<odoo>
  <record id="view_bhz_ai_agent_tree" model="ir.ui.view">
    <field name="name">bhz.ai.agent.tree</field>
    <field name="model">bhz.ai.agent</field>
    <field name="arch" type="xml">
      <tree>
        <field name="code"/>
        <field name="name"/>
        <field name="role_id"/>
        <field name="company_id"/>
        <field name="autonomy_level"/>
        <field name="active"/>
      </tree>
    </field>
  </record>

  <record id="view_bhz_ai_agent_form" model="ir.ui.view">
    <field name="name">bhz.ai.agent.form</field>
    <field name="model">bhz.ai.agent</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="code"/>
            <field name="name"/>
            <field name="active"/>
            <field name="company_id"/>
          </group>

          <group>
            <field name="role_id"/>
            <field name="manager_agent_id"/>
            <field name="run_as_user_id"/>
          </group>

          <group>
            <field name="policy_id"/>
            <field name="autonomy_level"/>
          </group>

          <notebook>
            <page string="Tools">
              <field name="tool_ids" widget="many2many_tags"/>
            </page>

            <page string="LLM">
              <group>
                <field name="llm_provider"/>
                <field name="model_name"/>
              </group>
              <group>
                <field name="system_prompt" widget="text"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_bhz_ai_agent" model="ir.actions.act_window">
    <field name="name">Agents</field>
    <field name="res_model">bhz.ai.agent</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_bhz_ai_agent_open"
            parent="bhz_ai_agents_menu"
            action="action_bhz_ai_agent"
            sequence="10"/>
</odoo>
