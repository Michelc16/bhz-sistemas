<odoo>
  <record id="view_res_config_settings_bhz_ai_org" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.bhz.ai.org</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[hasclass('settings')]" position="inside">
        <div class="app_settings_block" data-string="BHZ AI Org" string="BHZ AI Org">
          <h2>BHZ AI Org</h2>
          <group>
            <field name="bhz_ai_llm_provider"/>
            <field name="bhz_ai_openai_base_url"/>
            <field name="bhz_ai_openai_api_key" password="True"/>
            <field name="bhz_ai_openai_model"/>

            <field name="bhz_ai_ollama_url"/>
            <field name="bhz_ai_ollama_model"/>
            <field name="bhz_ai_serpapi_key" password="True" string="SerpAPI Key"/>
          </group>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
