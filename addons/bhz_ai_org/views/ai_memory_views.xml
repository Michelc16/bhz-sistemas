<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_bhz_ai_memory_tree" model="ir.ui.view">
    <field name="name">bhz.ai.memory.tree</field>
    <field name="model">bhz.ai.memory</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="tags"/>
        <field name="company_id"/>
        <field name="active"/>
        <field name="create_date"/>
      </list>
    </field>
  </record>

  <record id="view_bhz_ai_memory_form" model="ir.ui.view">
    <field name="name">bhz.ai.memory.form</field>
    <field name="model">bhz.ai.memory</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="tags"/>
            <field name="company_id"/>
            <field name="active"/>
          </group>
          <notebook>
            <page string="ConteÃºdo">
              <field name="content" widget="text"/>
            </page>
            <page string="Anexos">
              <field name="attachment_ids" widget="many2many_binary"/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_bhz_ai_memory" model="ir.actions.act_window">
    <field name="name">Memory</field>
    <field name="res_model">bhz.ai.memory</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_bhz_ai_memory"
            name="Memory"
            parent="bhz_ai_root"
            action="action_bhz_ai_memory"
            sequence="60"
            groups="bhz_ai_org.group_bhz_ai_operator,bhz_ai_org.group_bhz_ai_admin"/>
</odoo>
