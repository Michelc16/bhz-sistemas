<odoo>
  <record id="view_bhz_ai_role_tree" model="ir.ui.view">
    <field name="name">bhz.ai.role.tree</field>
    <field name="model">bhz.ai.role</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="code"/>
        <field name="level"/>
        <field name="parent_id"/>
      </tree>
    </field>
  </record>

  <record id="view_bhz_ai_role_form" model="ir.ui.view">
    <field name="name">bhz.ai.role.form</field>
    <field name="model">bhz.ai.role</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="level"/>
            <field name="parent_id"/>
          </group>
          <group>
            <field name="description"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_bhz_ai_role" model="ir.actions.act_window">
    <field name="name">Roles</field>
    <field name="res_model">bhz.ai.role</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_bhz_ai_role_open"
            parent="bhz_ai_roles_menu"
            action="action_bhz_ai_role"
            sequence="10"/>
</odoo>
