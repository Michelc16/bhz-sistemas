<odoo>
  <record id="view_bhz_ai_tool_tree" model="ir.ui.view">
    <field name="name">bhz.ai.tool.tree</field>
    <field name="model">bhz.ai.tool</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="risk_level"/>
        <field name="requires_approval"/>
        <field name="is_destructive"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_bhz_ai_tool_form" model="ir.ui.view">
    <field name="name">bhz.ai.tool.form</field>
    <field name="model">bhz.ai.tool</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="validate_callable" type="object" string="Validar" class="btn-secondary"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="active"/>
          </group>
          <group>
            <field name="risk_level"/>
            <field name="requires_approval"/>
            <field name="is_destructive"/>
          </group>
          <group>
            <field name="model_name"/>
            <field name="method_name"/>
          </group>
          <group>
            <field name="sample_params_json" widget="text"/>
            <field name="description" widget="text"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_bhz_ai_tool" model="ir.actions.act_window">
    <field name="name">Tools</field>
    <field name="res_model">bhz.ai.tool</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_bhz_ai_tool_open"
            parent="bhz_ai_tools_menu"
            action="action_bhz_ai_tool"
            sequence="10"/>
</odoo>
