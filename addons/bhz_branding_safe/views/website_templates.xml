<odoo>
    <!-- 1) Footer do website: põe BHZ na frente e mantém crédito Odoo -->
    <template id="bhz_website_footer" inherit_id="website.footer_custom" name="BHZ Website Footer (Safe)">
        <xpath expr="." position="inside">
            <div class="mt-2 small text-muted">
                Sistema personalizado por <strong>BHZ SISTEMAS</strong> • Powered by Odoo
            </div>
        </xpath>
    </template>

    <!-- 2) Login web (padrão do Odoo) com logo da BHZ -->
    <template id="bhz_web_login" inherit_id="web.login" name="BHZ Web Login (Safe)">
        <!-- antes do formulário de login, mostra a logo -->
        <xpath expr="//div[contains(@class,'oe_login_form')]" position="before">
            <div class="text-center mb-3">
                <img src="/bhz_branding_safe/static/src/img/bhz_logo.png"
                     alt="BHZ SISTEMAS"
                     style="max-height: 90px;"/>
            </div>
        </xpath>
    </template>
</odoo>
