<odoo>
    <!-- Layout do webclient -->
    <template id="bhz_webclient_layout" inherit_id="web.webclient_bootstrap" name="BHZ Webclient Layout (Safe)">
        <xpath expr="//t[@t-call='web.layout']" position="inside">
            <!-- título da aba -->
            <t t-jquery="title" t-operation="replace">
                <title>BHZ SISTEMAS</title>
            </t>
            <!-- favicon customizado -->
            <t t-jquery="link[rel*='icon']" t-operation="delete"/>
            <t t-jquery="head" t-operation="append">
                <link rel="icon" type="image/x-icon"
                      t-att-href="'/bhz_branding_safe/static/src/img/favicon.ico'"/>
            </t>
        </xpath>
    </template>

    <!-- Branding no rodapé do backend -->
    <template id="bhz_backend_branding" inherit_id="web.branding" name="BHZ + Odoo Branding">
        <xpath expr="//div" position="replace">
            <div class="o_bhz_branding_footer">
                <span>Customizado por <strong>BHZ SISTEMAS</strong></span>
                <span class="text-muted" style="margin-left:8px;">Powered by Odoo Enterprise</span>
            </div>
        </xpath>
    </template>
</odoo>
