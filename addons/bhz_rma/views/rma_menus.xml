<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem
        id="menu_bhz_rma_root"
        name="RMA"
        parent="stock.menu_stock_root"
        sequence="50"
    />

    <record id="action_bhz_rma_order" model="ir.actions.act_window">
        <field name="name">Pedidos de RMA</field>
        <field name="res_model">bhz.rma.order</field>
        <field name="view_mode">list,form,graph,pivot</field>
    </record>

    <menuitem
        id="menu_bhz_rma_orders"
        name="Pedidos de RMA"
        parent="menu_bhz_rma_root"
        action="action_bhz_rma_order"
        sequence="10"
    />

    <record id="action_bhz_rma_stock_quant" model="ir.actions.act_window">
        <field name="name">Estoque RMA</field>
        <field name="res_model">stock.quant</field>
        <field name="view_mode">list,pivot,graph</field>
        <field name="domain" eval="[('location_id.is_rma_location', '=', True), ('location_id.company_id', 'in', [user.company_id.id, False])]"/>
        <field name="context" eval="{'default_company_id': user.company_id.id, 'allowed_company_ids': user.company_ids.ids}"/>
    </record>

    <menuitem
        id="menu_bhz_rma_stock"
        name="Estoque RMA"
        parent="menu_bhz_rma_root"
        action="action_bhz_rma_stock_quant"
        sequence="20"
    />
</odoo>
