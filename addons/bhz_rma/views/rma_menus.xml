<odoo>
    <!-- Menu raiz do módulo RMA -->
    <menuitem
        id="menu_bhz_rma_root"
        name="RMA"
        sequence="60"
        groups="stock.group_stock_user"
    />

    <!-- Ação principal para listar RMAs -->
    <record id="action_bhz_rma_order" model="ir.actions.act_window">
        <field name="name">Pedidos de RMA</field>
        <field name="res_model">bhz.rma.order</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="help" type="html">
            <p>
                Controle aqui seus produtos com defeito, acompanhe o status de RMA e o
                prejuízo associado.
            </p>
        </field>
    </record>

    <!-- Menu de listagem -->
    <menuitem
        id="menu_bhz_rma_orders"
        name="Pedidos de RMA"
        parent="menu_bhz_rma_root"
        action="action_bhz_rma_order"
        sequence="10"
        groups="stock.group_stock_user"
    />
</odoo>
