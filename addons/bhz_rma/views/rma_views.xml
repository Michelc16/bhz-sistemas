<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List view -->
    <record id="view_bhz_rma_order_list" model="ir.ui.view">
        <field name="name">bhz.rma.order.list</field>
        <field name="model">bhz.rma.order</field>
        <field name="arch" type="xml">
            <list string="Pedidos de RMA">
                <field name="name"/>
                <field name="date_rma"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="warranty_type"/>
                <field name="state"/>
                <field name="unit_cost"/>
                <field name="total_cost"/>
            </list>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_bhz_rma_order_form" model="ir.ui.view">
        <field name="name">bhz.rma.order.form</field>
        <field name="model">bhz.rma.order</field>
        <field name="arch" type="xml">
            <form string="Pedido de RMA">
                <header>
                    <button name="action_set_waiting" type="object" string="Em espera" class="btn-primary"/>
                    <button name="action_set_with_supplier" type="object" string="Com fornecedor" class="btn-secondary"/>
                    <button name="action_set_no_warranty" type="object" string="Sem garantia" class="btn-secondary"/>
                    <button name="action_exchange_with_customer"
                            type="object"
                            string="Trocar peça"
                            class="btn-secondary"
                            invisible="warranty_type != 'customer'"/>
                    <button name="action_solved" type="object" string="Solucionado" class="btn-success"/>
                    <button name="action_cancel" type="object" string="Cancelar" class="btn-secondary"/>

                    <button name="action_print_rma" type="object" string="Imprimir RMA" class="btn-secondary"/>
                    <button name="action_send_rma_email" type="object" string="Enviar por e-mail" class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting,with_supplier,no_warranty,solved,cancelled"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name" readonly="1"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="date_rma"/>
                            <field name="company_id" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="warranty_type"/>
                            <field name="resolution_method"/>
                        </group>
                        <group>
                            <field name="product_id"/>
                            <field name="product_uom_id"/>
                            <field name="quantity"/>
                            <field name="lot_id"/>
                        </group>
                    </group>

                    <group string="Locais de Estoque" colspan="4">
                        <group>
                            <field name="location_id"/>
                        </group>
                        <group>
                            <field name="rma_location_id"/>
                        </group>
                    </group>

                    <group string="Vinculações">
                        <field name="service_order_id"/>
                    </group>

                    <notebook>
                        <page string="Custos">
                            <group>
                                <field name="unit_cost" readonly="1"/>
                                <field name="total_cost" readonly="1"/>
                            </group>
                        </page>

                        <page string="Movimentos de Estoque">
                            <group>
                                <field name="picking_return_id" readonly="1"/>
                                <field name="scrap_id" readonly="1"/>
                                <field name="exchange_delivery_move_id" readonly="1"/>
                                <field name="exchange_return_move_id" readonly="1"/>
                            </group>
                        </page>

                        <page string="Observações">
                            <group>
                                <field name="note"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_bhz_rma_order_search" model="ir.ui.view">
        <field name="name">bhz.rma.order.search</field>
        <field name="model">bhz.rma.order</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="warranty_type"/>
                <field name="state"/>
                <field name="date_rma"/>
            </search>
        </field>
    </record>

    <!-- Pivot view -->
    <record id="view_bhz_rma_order_pivot" model="ir.ui.view">
        <field name="name">bhz.rma.order.pivot</field>
        <field name="model">bhz.rma.order</field>
        <field name="arch" type="xml">
            <pivot string="Análise de RMA">
                <field name="total_cost" type="measure"/>
                <field name="quantity" type="measure"/>
                <field name="product_id" type="row"/>
                <field name="partner_id" type="row"/>
                <field name="state" type="col"/>
                <field name="date_rma" interval="month" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph view -->
    <record id="view_bhz_rma_order_graph" model="ir.ui.view">
        <field name="name">bhz.rma.order.graph</field>
        <field name="model">bhz.rma.order</field>
        <field name="arch" type="xml">
            <graph string="RMA por custo" type="bar">
                <field name="total_cost" type="measure"/>
                <field name="state" type="row"/>
            </graph>
        </field>
    </record>
</odoo>
