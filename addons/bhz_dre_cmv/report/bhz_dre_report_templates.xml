<odoo>

    <!-- AÇÃO DO RELATÓRIO (cria o xmlid: bhz_dre_cmv.action_bhz_dre_print_report) -->
    <record id="action_bhz_dre_print_report" model="ir.actions.report">
        <field name="name">DRE</field>
        <field name="model">bhz.dre.report</field>
        <field name="report_type">qweb-pdf</field>
        <!-- nome técnico do template abaixo -->
        <field name="report_name">bhz_dre_cmv.report_bhz_dre</field>
        <field name="report_file">bhz_dre_cmv.report_bhz_dre</field>
        <field name="print_report_name">'DRE - %s' % (object.name)</field>
    </record>

    <!-- TEMPLATE QWEB DO RELATÓRIO -->
    <template id="report_bhz_dre">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <h2>DRE - <t t-esc="o.company_id.name"/></h2>
                    <p>
                        Período:
                        <t t-esc="o.date_from"/> até
                        <t t-esc="o.date_to"/>
                    </p>

                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <th>Descrição</th>
                                <th style="text-align:right;">Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <t t-if="line.level == 'title'">
                                            <strong><t t-esc="line.name"/></strong>
                                        </t>
                                        <t t-elif="line.level == 'subtotal'">
                                            <span style="font-weight:600;">
                                                <t t-esc="line.name"/>
                                            </span>
                                        </t>
                                        <t t-else="">
                                            <t t-esc="line.name"/>
                                        </t>
                                    </td>
                                    <td style="text-align:right;">
                                        <t t-if="line.amount">
                                            <t t-esc="format_amount(line.amount, o.currency_id)"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                </div>
            </t>
        </t>
    </template>

</odoo>
