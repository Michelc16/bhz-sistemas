<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="bhz_dre_report_document">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <h2>Demonstração do Resultado do Exercício</h2>
                        <p>
                            <strong>Empresa:</strong>
                            <span t-esc="doc.company_id.name"/>
                        </p>
                        <p>
                            <strong>Período:</strong>
                            <span t-esc="doc.date_from"/> -
                            <span t-esc="doc.date_to"/>
                        </p>

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th>Descrição</th>
                                    <th class="text-right">Valor</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-esc="line.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="formatLang(line.amount, currency_obj=doc.currency_id)"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
