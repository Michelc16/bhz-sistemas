<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_bhz_dre_template_tree" model="ir.ui.view">
        <field name="name">bhz.dre.template.tree</field>
        <field name="model">bhz.dre.template</field>
        <field name="arch" type="xml">
            <list string="Templates de DRE">
                <field name="name"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="view_bhz_dre_template_form" model="ir.ui.view">
        <field name="name">bhz.dre.template.form</field>
        <field name="model">bhz.dre.template</field>
        <field name="arch" type="xml">
            <form string="Template de DRE">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Linhas">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="is_total"/>
                                    <field name="sign" widget="badge"/>
                                    <field name="account_ids" widget="many2many_tags"
                                           modifiers="{'invisible': [['is_total', '=', True]]}"/>
                                    <field name="total_source_codes"
                                           modifiers="{'invisible': [['is_total', '=', False]]}"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bhz_dre_template" model="ir.actions.act_window">
        <field name="name">Templates de DRE</field>
        <field name="res_model">bhz.dre.template</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_company_id': company_id}</field>
        <field name="domain">[('company_id', '=', company_id)]</field>
    </record>

</odoo>
