<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_bhz_dre_wizard_form" model="ir.ui.view">
        <field name="name">bhz.dre.wizard.form</field>
        <field name="model">bhz.dre.wizard</field>
        <field name="arch" type="xml">
            <form string="Gerar DRE do mês">
                <group>
                    <field name="company_id"/>
                    <field name="year"/>
                    <field name="month"/>
                </group>
                <footer>
                    <button string="Gerar"
                            name="action_generate_dre"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bhz_dre_wizard" model="ir.actions.act_window">
        <field name="name">Gerar DRE</field>
        <field name="res_model">bhz.dre.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_bhz_dre_generate"
              name="Gerar DRE do mês"
              parent="menu_bhz_dre_reporting"
              action="action_bhz_dre_wizard"
              sequence="5"/>
</odoo>
