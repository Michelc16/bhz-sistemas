<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_bhz_dre_wizard_form" model="ir.ui.view">
        <field name="name">bhz.dre.wizard.form</field>
        <field name="model">bhz.dre.wizard</field>
        <field name="arch" type="xml">
            <form string="Gerar DRE do mês">
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <footer>
                        <button string="Gerar" type="object" name="action_generate" class="btn-primary"/>
                        <button string="Cancelar" special="cancel" class="btn-secondary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bhz_dre_wizard" model="ir.actions.act_window">
        <field name="name">Gerar DRE do mês</field>
        <field name="res_model">bhz.dre.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_bhz_dre_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
