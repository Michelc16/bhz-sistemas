<odoo>

    <!-- VIEW DO WIZARD: GERAR DRE DO MÊS -->
    <record id="view_bhz_dre_wizard_form" model="ir.ui.view">
        <field name="name">bhz.dre.wizard.form</field>
        <field name="model">bhz.dre.wizard</field>
        <field name="arch" type="xml">
            <form string="Gerar DRE do mês">
                <group>
                    <field name="company_id"/>
                    <field name="year"/>
                    <field name="month"/>
                </group>
                <footer>
                    <button name="action_generate_dre"
                            string="Gerar DRE"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- AÇÃO DO WIZARD (ABRE EM POPUP) -->
    <record id="action_bhz_dre_wizard" model="ir.actions.act_window">
        <field name="name">Gerar DRE do mês</field>
        <field name="res_model">bhz.dre.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_bhz_dre_wizard_form"/>
        <field name="target">new</field>
    </record>

    <!--
        IMPORTANTE:
        Não há <menuitem> aqui.
        O menu para esse wizard já está definido em views/bhz_dre_menu.xml,
        usando action="action_bhz_dre_wizard".
    -->

</odoo>
