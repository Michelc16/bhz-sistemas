<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_bhz_dre_wizard_form" model="ir.ui.view">
      <field name="name">bhz.dre.wizard.form</field>
      <field name="model">bhz.dre.wizard</field>
      <field name="arch" type="xml">
        <form string="Gerar DRE do mês">
          <sheet>
            <group>
              <field name="company_id"/>
              <field name="date_from"/>
              <field name="date_to"/>
              <field name="template_id"/>
            </group>
          </sheet>
          <footer>
            <button name="action_generate" type="object" string="Gerar" class="btn-primary"/>
            <button special="cancel" string="Cancelar" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_bhz_dre_wizard" model="ir.actions.act_window">
      <field name="name">Gerar DRE do mês</field>
      <field name="res_model">bhz.dre.wizard</field>
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_bhz_dre_wizard_form"/>
      <field name="target">new</field>
    </record>

  </data>
</odoo>
