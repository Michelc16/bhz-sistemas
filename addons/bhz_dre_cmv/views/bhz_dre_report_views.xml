<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_bhz_dre_report_tree" model="ir.ui.view">
        <field name="name">bhz.dre.report.tree</field>
        <field name="model">bhz.dre.report</field>
        <field name="arch" type="xml">
            <list string="Relatórios DRE">
                <field name="name"/>
                <field name="company_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_bhz_dre_report_form" model="ir.ui.view">
        <field name="name">bhz.dre.report.form</field>
        <field name="model">bhz.dre.report</field>
        <field name="arch" type="xml">
            <form string="Relatório DRE">
                <header>
                    <button name="action_print_pdf"
                            string="Imprimir PDF"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'calculated'"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="date_from" readonly="1"/>
                        <field name="date_to" readonly="1"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <field name="line_ids"
                           readonly="1"
                           mode="tree"
                           context="{'tree_view_ref': 'bhz_dre_cmv.view_bhz_dre_report_line_tree'}"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_bhz_dre_report_line_tree" model="ir.ui.view">
        <field name="name">bhz.dre.report.line.list</field>
        <field name="model">bhz.dre.report.line</field>
        <field name="arch" type="xml">
            <list string="Linhas da DRE">
                <field name="sequence"/>
                <field name="name"/>
                <field name="amount" widget="monetary"/>
            </list>
        </field>
    </record>

    <record id="action_bhz_dre_report" model="ir.actions.act_window">
        <field name="name">Relatórios DRE</field>
        <field name="res_model">bhz.dre.report</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
