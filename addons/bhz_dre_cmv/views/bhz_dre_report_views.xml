<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LISTA de relatórios -->
    <record id="view_bhz_dre_report_list" model="ir.ui.view">
        <field name="name">bhz.dre.report.list</field>
        <field name="model">bhz.dre.report</field>
        <field name="arch" type="xml">
            <list string="Relatórios DRE">
                <field name="name"/>
                <field name="company_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- FORM do relatório -->
    <record id="view_bhz_dre_report_form" model="ir.ui.view">
        <field name="name">bhz.dre.report.form</field>
        <field name="model">bhz.dre.report</field>
        <field name="arch" type="xml">
            <form string="Relatório de DRE">
                <header>
                    <!-- botão de imprimir -->
                    <button name="%(action_bhz_dre_print_report)d"
                            string="Imprimir"
                            type="action"
                            class="btn-primary"
                            invisible="state != 'calculated'"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="date_from" readonly="1"/>
                        <field name="date_to" readonly="1"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <!-- lista de linhas da DRE -->
                    <field name="line_ids">
                        <list>
                            <field name="sequence" readonly="1"/>
                            <field name="name" readonly="1"/>
                            <field name="amount" widget="monetary"/>
                        </list>
                    </field>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_bhz_dre_report" model="ir.actions.act_window">
        <field name="name">Relatórios DRE</field>
        <field name="res_model">bhz.dre.report</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
