<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bhz_football_team_tree" model="ir.ui.view">
        <field name="name">bhz.football.team.tree</field>
        <field name="model">bhz.football.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="logo" widget="image" options="{'preview_image': 'logo'}" class="o_avatar"/>
                <field name="name"/>
                <field name="slug"/>
                <field name="website_published"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_bhz_football_team_form" model="ir.ui.view">
        <field name="name">bhz.football.team.form</field>
        <field name="model">bhz.football.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="slug"/>
                            <field name="website_published"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="logo" widget="image" class="oe_avatar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bhz_football_team" model="ir.actions.act_window">
        <field name="name">Times</field>
        <field name="res_model">bhz.football.team</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
