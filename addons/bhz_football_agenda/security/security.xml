<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Grupo bÃ¡sico: quem pode gerenciar agenda -->
    <record id="group_bhz_football_manager" model="res.groups">
        <field name="name">BHZ Futebol - Gerenciar Agenda</field>
    </record>

    <record id="rule_bhz_football_team_company" model="ir.rule">
        <field name="name">Times por empresa</field>
        <field name="model_id" ref="model_bhz_football_team"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="rule_bhz_football_match_company" model="ir.rule">
        <field name="name">Jogos por empresa</field>
        <field name="model_id" ref="model_bhz_football_match"/>
        <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
</odoo>
