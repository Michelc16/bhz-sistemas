<odoo>
  <!-- FORM CONFIG -->
  <record id="view_bhz_magalu_config_form" model="ir.ui.view">
    <field name="name">bhz.magalu.config.form</field>
    <field name="model">bhz.magalu.config</field>
    <field name="arch" type="xml">
      <form string="Configuração Magalu (BHZ)">
        <header>
          <button name="action_connect_magalu"
                  type="object"
                  string="Conectar Magalu"
                  class="oe_highlight"/>
          <button name="action_refresh_token"
                  type="object"
                  string="Renovar Token"/>
        </header>
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="company_id"/>
          </group>
          <group string="Tokens">
            <field name="access_token" readonly="1"/>
            <field name="refresh_token" readonly="1"/>            
            <field name="token_expires_at" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_bhz_magalu_config" model="ir.actions.act_window">
    <field name="name">Configuração Magalu</field>
    <field name="res_model">bhz.magalu.config</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- ROOT MENU -->
  <menuitem id="menu_bhz_magalu_root"
            name="Magalu"
            sequence="90"/>

  <!-- CHILD MENU -->
  <menuitem id="menu_bhz_magalu_config"
            name="Configuração"
            parent="menu_bhz_magalu_root"
            action="action_bhz_magalu_config"
            sequence="1"/>
</odoo>
