<odoo>
  <!-- LIST VIEW -->
  <record id="view_bhz_magalu_order_list" model="ir.ui.view">
    <field name="name">bhz.magalu.order.list</field>
    <field name="model">bhz.magalu.order</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="config_id"/>
        <field name="sale_id"/>
      </list>
    </field>
  </record>

  <!-- FORM VIEW -->
  <record id="view_bhz_magalu_order_form" model="ir.ui.view">
    <field name="name">bhz.magalu.order.form</field>
    <field name="model">bhz.magalu.order</field>
    <field name="arch" type="xml">
      <form string="Pedido Magalu">
        <sheet>
          <group>
            <field name="name"/>
            <field name="config_id"/>
            <field name="sale_id"/>
            <field name="raw_json" widget="text"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION (TROCADO) -->
  <record id="action_bhz_magalu_order" model="ir.actions.act_window">
    <field name="name">Pedidos Magalu</field>
    <field name="res_model">bhz.magalu.order</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- MENU -->
  <menuitem id="menu_bhz_magalu_order"
            name="Pedidos"
            parent="menu_bhz_magalu_root"
            action="action_bhz_magalu_order"
            sequence="100"/>
</odoo>
